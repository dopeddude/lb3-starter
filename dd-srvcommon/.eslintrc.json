{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script",
    "ecmaFeatures": {
      "globalReturn": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "worker": true
  },
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "block-scoped-var": [2],
    "block-spacing": [2, "always"],
    "brace-style": [2, "1tbs"],
    "camelcase": [2],
    "comma-style": [2, "last"],
    "consistent-this": [2, "self"],
    "comma-spacing": [2, {"before": false, "after": true}],
    "curly": [2, "all"],
    "dot-location": [2, "property"],
    "dot-notation": [2],
    "eol-last": [2],
    "eqeqeq": [2],
    "indent": [2, 2, {"SwitchCase": 1, "VariableDeclarator": { "var": 2, "let": 2, "const": 3}}],
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "keyword-spacing": [2, {"before": true, "after": true, "overrides": {}}],
    "linebreak-style": [2, "unix"],
    "max-depth": [2, 5],
    //"max-len": [2, 120, 4, {"ignoreComments": true, "ignoreUrls": true}],
    "max-nested-callbacks": [2, 10],
    "new-parens": [2],
    "max-statements": [2, 75],
    "no-bitwise": [1],
    //"new-cap": [2],
    "no-eq-null": [2],
    //"no-undef": [2],
    //"no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-caller": [2],
    "no-empty": [2],
    "no-else-return": [2],
    "no-eval": [2],
    "no-redeclare":  [2, { "builtinGlobals":  true }],
    "no-useless-concat": [2],
    "no-useless-call": [2],
    "no-with": [2],
    "no-delete-var": [2],
    "no-undef-init": [2],
    //"no-undefined": [2],
    "no-void": [2],
    "no-use-before-define": [2, { "functions": false, "classes": true }],
    "no-new-require": [2],
    "no-path-concat": [2],
    "no-implied-eval": [2],
    "no-loop-func": [2],
    "no-lonely-if": [2],
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-multiple-empty-lines": [2, {"max": 2, "maxEOF": 1}],
    "no-unneeded-ternary": [2, {"defaultAssignment": true }],
    "no-spaced-func": [2],
    "no-trailing-spaces": [2, { "skipBlankLines": false }],
    "no-multi-spaces":  [2, { "exceptions": { "Property": false, "VariableDeclarator": true, "ImportDeclaration": true } }],
    "no-multi-str": [0],
    "no-alert": [2],
    "no-debugger": [2],
    "no-console": [2],
    "no-dupe-args": [2],
    //"no-inner-declarations": [2, "both"],
    "no-dupe-keys": [2],
    "no-unreachable": [2],
    "no-duplicate-case": [2],
    "no-extra-semi": [2],
    //"one-var": ["error", "always"],
    "object-curly-spacing": [2, "never"],
    "padded-blocks": ["error", "never"],
    "quotes": ["error", "single", "avoid-escape"],
    "quote-props": [2, "as-needed", { "keywords": true, "unnecessary": true, "numbers": true }],
    "strict": [2, "global"],
    "space-before-blocks": [2, "always"],
    "space-in-parens": [2, "never"],
    "space-unary-ops": [2, { "words": true, "nonwords": false }],
    "semi-spacing":  [2, {"before":  false, "after": true}],
    "semi":  [2, "always"],
    "use-isnan": [2],
    "wrap-iife": [2, "inside"]
  },
  "globals": {},
  "plugins": []
}
